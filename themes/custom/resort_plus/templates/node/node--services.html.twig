<section class="service-details carousels">
    <div class="container">
        <div class="picture">
           {% for key,value in content.field_multiple_image['#items'] %}
            {% if key == 0 %}
                    <img src="{{ file_url(content.field_multiple_image['#items'][0].entity.uri.value) }}" alt="{{content.field_multiple_image['#items'][0].alt}}" />
            {% endif %}        
            {% endfor %}
        </div>
        <div class="content">
            {{content.body.0}}
        </div>
        <div class="sub-title">
            <h3>{{content.field_content_title.0}}</h3>
        </div>
        {{content.field_description.0}}
		{# <div class="carousel-block"> #}
			<div class="carousel2">
                <div class="owl-carousel carousels-2 owl-theme">
                    {% for key,value in content.field_multiple_image['#items'] %}
                            <img src="{{ file_url(content.field_multiple_image['#items'][key].entity.uri.value) }}" alt="{{content.field_multiple_image['#items'][key].alt}}" />
                    {% endfor %}
                </div> 
            </div>
    </div>         
</section>