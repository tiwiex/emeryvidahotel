{% if fields.counter.content == "1" %}
    <div class="blog-item">
        <img src="{{fields.field_image.content}}" alt="blog-image">
        <div class="blog-detail">
            <span class="date"> {{fields.created.content}}</span>
            <h3>{{fields.title.content}}</h3>
            <p>{{fields.body.content}}</p>
            <div class="read">
                <a href="{{fields.view_node.content}}" title="{{fields.view_node_1.content}}" tabindex="-1">{{fields.view_node_1.content}}</a>
                <svg xmlns="http://www.w3.org/2000/svg" width="59" height="34.043" viewBox="0 0 59 34.043">
                    <g id="arrow-right_1_" data-name="arrow-right (1)" transform="translate(2.5 3.521)">
                        <path id="Path_28" data-name="Path 28" d="M0,0H52.786" transform="translate(0 13.5)" fill="none" stroke="#333239" stroke-linecap="round" stroke-width="5"></path>
                        <path id="Path_3" data-name="Path 3" d="M0,27,16.2,13.5,0,0" transform="translate(37.804 0)" fill="none" stroke="#333239" stroke-linecap="round" stroke-linejoin="round" stroke-width="5"></path>
                    </g>
                </svg>
            </div>
        </div>                                   
    </div>
{% else %}
    <div class="blog-items">
        <div class="blog-created">
            <p class="date">
                <span>{{fields.created_1.content}}</span><span>{{fields.created_2.content}}</span>
            </p>
            <h5>{{fields.title.content}}</h5>
        </div>                               
        <p>{{fields.body.content}}</p> 
        <div class="read">
                <a href="{{fields.view_node.content}}" title="{{fields.view_node_1.content}}" tabindex="-1">{{fields.view_node_1.content}}</a>
                <svg xmlns="http://www.w3.org/2000/svg" width="59" height="34.043" viewBox="0 0 59 34.043">
                    <g id="arrow-right_1_" data-name="arrow-right (1)" transform="translate(2.5 3.521)">
                        <path id="Path_28" data-name="Path 28" d="M0,0H52.786" transform="translate(0 13.5)" fill="none" stroke="#333239" stroke-linecap="round" stroke-width="5"></path>
                        <path id="Path_3" data-name="Path 3" d="M0,27,16.2,13.5,0,0" transform="translate(37.804 0)" fill="none" stroke="#333239" stroke-linecap="round" stroke-linejoin="round" stroke-width="5"></path>
                    </g>
                </svg>
            </div>                   
    </div>
{% endif %}

