{% set base_url = url('<front>')  %}
<!-- Login Page banner -->
{% if login_banner_title %}
    <section class="page-banner" style="background-image: url({{login_banner_img}}); background-repeat: no-repeat; background-size: cover;background-position: center;height:260px; position: relative;">
        <div class="page-title-block">
            <h1>{{login_banner_title}}</h1>
        </div>
    </section>
{% endif %}
<!-- Login Section Starts-->
    <section class="page-login">
        <div class="container">
            <div class="page-form-block">
                <div class="form-wrapper" style="background-image: url('{{ login_bg_img }}');background-repeat: no-repeat;background-position: center;background-size: cover;">
                    <div class="content-wrapper">
                        <h2 class="page_title">{{ login_title }}</h2>
                        <div class="form user_login_form common_pages_form">
                            <div class="form-group">
                                {{ form.name }}
                            </div>
                            <div class="form-group">
                                {{ form.pass }}
                            </div>
                            <div class="login-btn">
                                {{ form.actions }}
                            </div>
                            <div class="commen_page_link-wrapper">
                                <h4>Don't Have an Account? <a href="{{base_url}}user/register" class="login-link" title="Sign Up">Sign up</a></h4>
                                {# <p><a href="{{ base_url }}user/password" class="login-link" title="Forgot Password">Forgot Password?</a></p> #}
                            </div>
                        </div>
                    {{ form.form_build_id }}
                    {{ form.form_id }}
                    </div>
                </div>
            </div>
        </div>
    </section>
<!-- Login Section Ends-->